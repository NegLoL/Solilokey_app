<% provide(:title, "Login") %>

<%= render 'home/header' %>

<div class="new-user-page">
    <div class="container">
        <div class="form-box">
            <% if flash.now[:danger] %>
                <div class="flash-danger">
                    <%= flash.now[:danger] %>
                </div>
            <% end %>
            <%= form_with scope: :session, url: login_path, local: true do |f| %>
                <%= f.label :email %>
                <%= f.email_field :email, class: "form-area" %>

                <%= f.label :password %>
                <%= f.password_field :password, class: "form-area" %>

                <%= f.submit "ログイン", class: "submit" %>
            <% end %>
        </div>
    </div>
</div>   

<%= render 'home/footer' %>
