<% provide(:title, "Users") %>

<div class="container">

    <%= render 'users/sideber' %>
    
    <div class="container2">
        <div class="edit-user-page">
            <div class="users-top">
                <h2>ユーザー一覧</h2>
            </div>
            <ul class="users-box">
                <% @users.each do |user| %>
                    <li>
                        <%= link_to user do %>
                            <img src="<%= "/user_images/#{user.image_name}" %>">
                        <% end %>
                        <%= link_to user.name, user %>
                    </li>
                <% end %>
            </ul>
        </div>
    </div>

</div>